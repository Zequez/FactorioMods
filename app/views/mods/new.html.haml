- title @mod.new_record? ? t('title.mods.new') : t('title.mods.edit', name: @mod.name)
.mods-edit
  - if @mod.new_record?
    %h2 Create new mod
  - else
    %h2
      Edit
      = link_to @mod.name, @mod
  = semantic_form_for @mod do |f|
    = f.inputs do
      = f.input :name
      = f.input :categories
      = f.input :author_name if current_user.is_admin?
      = f.input :author if current_user.is_admin?
      = f.input :github
      = f.input :official_url
      = f.input :forum_url
      = f.input :forum_subforum_url
      = f.input :imgur
      = f.input :summary, as: :text
      %li.nested-form.mod-versions
        = f.semantic_fields_for :versions do |ff|
          = render 'version_fields', f: ff
        .nested-form-links.mod-versions-links
          = link_to_add_association 'Add version', f, :versions
    // Nested mod versions
    // Nested mod files
    // Nested mod files
    = f.actions do
      = f.action :submit
  - unless @mod.new_record?
    .mod-forum
      %iframe.mod-forum-iframe{src: @mod.forum_url}