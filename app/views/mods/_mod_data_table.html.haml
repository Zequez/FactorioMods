%table.mod-data
  %tbody
    %tr.mod-data-row
      %td.mod-data-row-name Game version
      %td.mod-data-row-value= @mod.game_versions_string
      %td.mod-data-row-name Author
      %td.mod-data-row-value= @mod.author_name
    %tr.mod-data-row
      %td.mod-data-row-name Source code
      %td.mod-data-row-value= link_to @mod.github_path, @mod.github_url
      %td.mod-data-row-name Tags
      %td.mod-data-row-value
    %tr.mod-data-row
      %td.mod-data-row-name First version
      %td.mod-data-row-value= @mod.versions.first.number
      %td.mod-data-row-name Last version
      %td.mod-data-row-value= @mod.versions.last.number
    %tr.mod-data-row
      %td.mod-data-row-name First release
      %td.mod-data-row-value= @mod.versions.first.released_at.to_s(:rfc822) if @mod.versions.first.released_at
      %td.mod-data-row-name Last release
      %td.mod-data-row-value= @mod.versions.last.released_at.to_s(:rfc822) if @mod.versions.last.released_at
    %tr.mod-data-row
      %td.mod-data-row-name License
      %td.mod-data-row-value= link_to @mod.license, @mod.license_url if @mod.license
      %td.mod-data-row-name Official forum post
      %td.mod-data-row-value
        - unless @mod.forum_post_url.blank?
          %a{href: @mod.forum_post_url}
            = @mod.forum_comments_count unless @mod.forum_comments_count.blank?
            comments
    %tr.mod-data-row
      %td.mod-data-row-name Official site
      %td.mod-data-row-value{colspan: 3}= @mod.official_url if @mod.official_url